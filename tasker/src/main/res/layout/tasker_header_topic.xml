<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_background"
    android:padding="@dimen/padding_screen">

    <TextView
        android:id="@+id/tv_tasker_topic_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/primary_dark"
        tools:text="(阅读选择)"/>

    <ImageView
        android:id="@+id/iv_tasker_topic_switcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_tv_ic_drawable"
        android:layout_toRightOf="@+id/tv_tasker_topic_type"
        android:src="@mipmap/tasker_ic_correct_item_switcher"/>

    <TextView
        android:id="@+id/tv_tasker_topic_item_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_tasker_topic_item_count"
        android:textColor="@color/primary_dark"
        android:textSize="18sp"
        tools:text="(3)"/>

    <TextView
        android:id="@+id/tv_tasker_topic_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        tools:text="/(5)"/>

</RelativeLayout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_module_player"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_player_shape"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/padding_screen">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/btn_player_start"
        android:layout_width="@dimen/size_player"
        android:layout_height="@dimen/size_player"
        app:srcCompat="@drawable/slct_btn_player"/>

    <SeekBar
        android:id="@+id/sb_player_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_player_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/marginleft_tv_ic_tv"
        android:text="00:00/00:00"
        tools:text="00:00/00:00"/>
</LinearLayout>

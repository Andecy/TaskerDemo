<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View style="@style/DivideHorizontal"
          android:background="@android:color/darker_gray"/>

    <include layout="@layout/header_tasker_topic"/>

    <View style="@style/DivideHorizontal"
          android:background="@android:color/darker_gray"/>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/stl_tasker_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_tab"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="gone"
        app:tl_indicator_color="#393E46"
        app:tl_indicator_corner_radius="5dp"
        app:tl_indicator_margin_left="2dp"
        app:tl_indicator_margin_right="2dp"
        app:tl_indicator_style="BLOCK"/>

    <com.lancoo.tasker.view.ScrollViewPager
        android:id="@+id/vp_tasker_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"/>
</LinearLayout>